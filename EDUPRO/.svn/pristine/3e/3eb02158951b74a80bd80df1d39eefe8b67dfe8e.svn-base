<!DOCTYPE composition PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<ui:composition xmlns="http://www.w3.org/1999/xhtml"
    xmlns:s="http://jboss.com/products/seam/taglib"
    xmlns:ui="http://java.sun.com/jsf/facelets"
    xmlns:f="http://java.sun.com/jsf/core"
    xmlns:h="http://java.sun.com/jsf/html"
    xmlns:rich="http://richfaces.org/rich">
    <h:form id="reportsForm">
	<div style="width: 800px" align="center">
		<table width="100%" cellspacing="2" cellpadding="2">
		<tr>
			<td align="left">
				<table>
					<tr>
						<td valign="top" align="left">
							<p>
								<span style="font-size:30px;font-weight:bold;color:#888;">Reports</span><br/>
								<span style="font-size:16px;">Various reports on payments and debts</span>
							</p>
						</td>
						<td valign="bottom" align="right">
							<a href="#" onclick="history.back(-1);return false;"><img src="images/back.png" style="float: right;" /></a>
						</td>
					</tr>
					<tr>
						<td colspan="2">
							<h:graphicImage url="/images/content_header_img_bk.jpg" width="100%" />
						</td>
					</tr>
				</table>
			</td>
		</tr>
		<tr>
			<td colspan="2">
				<rich:spacer height="2" />
			</td>
		</tr>
		<tr>
			<td colspan="2" align="center" width="100%">
				<table width="100%" align="center" cellspacing="50" cellpadding="2">
					<tr valign="top" align="left">
						<td width="50%">
							<p>
								<s:link view="/payment_report.xhtml" value="Payments Report" style="font-size:22px;font-weight:bold;" />
								<br/>
								<span style="font-size:12px;text-align:justify;">View report on various fee payments</span>
							</p>
						</td>
						<td width="50%">
							<p>
								<s:link view="/debt_report.xhtml" value="Debtors Report" style="font-size:22px;font-weight:bold;" />
								<br/>
								<span style="font-size:12px;text-align:justify;">View report on debtors</span>
							</p>
						</td>
					</tr>
				</table>
			</td>
		</tr>
	</table>
</div>
</h:form>
</ui:composition>
