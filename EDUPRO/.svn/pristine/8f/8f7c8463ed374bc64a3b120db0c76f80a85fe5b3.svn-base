								</rich:column>
								<rich:column sortBy="#{obj.amt_paid}" style="vertical-align: top">
									<f:facet name="header">Amount paid</f:facet>
									<h:outputText value="#{obj.amt_paid}">
										<f:convertNumber pattern="N#,##0.00;(N#,##0.00)"/>
